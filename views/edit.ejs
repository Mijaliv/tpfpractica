<!DOCTYPE html>
<html>

<%- include('./head.ejs') %>

    <body>
        <h1>Editar Datos</h1>
        <form action="/update/<%= item.id %>" method="post">
            <input type="text" name="nombre" value="<%= item.nombre %>" required>
            <input type="text" name="email" value="<%= item.email %>" required>
           
            <select name="oficina_id">
                <% oficinas.forEach(function(oficina) { %>
                    <option value="<%= oficina.id %>"><%= oficina.denominacion %></option>
                <% }); %>
            </select>
            <br>
            <br>
            <button class= "btn btn-primary custom-pink" type="submit">Actualizar</button>
            <a class= "btn btn-danger custom-red" href="/personas"> Cancelar</a>
            
        </form>
        
    </body>

</html>